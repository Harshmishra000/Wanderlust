<% layout("/layouts/boilerplates") -%>


<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"  id="listingForm">
        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input placeholder="Add a catchy title" name="listing[title]" class="form-control" required/> 
        <div class="invalid-feedback">Title should be valid</div>
        <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input placeholder="Enter the description" name="listing[description]" class="form-control" required/> 
        <div class="invalid-feedback">Description should be valid</div>
        <div class="valid-feedback">Description looks good!</div>
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input  name="listing[image]" class="form-control" type="file"/>
        <div class="invalid-feedback">Image should be valid</div>
        </div>
<div class="mb-3">
  <label for="category" class="form-label">Category</label>
  <select name="listing[category]" class="form-control drop-down" required>
    <option value="" disabled selected hidden>--Select Category--</option>
    <option value="rooms" <%= listing?.category === "rooms" ? "selected" : "" %>>Rooms</option>
    <option value="trending" <%= listing?.category === "trending" ? "selected" : "" %>>Trending</option>
    <option value="mountain" <%= listing?.category === "mountain" ? "selected" : "" %>>Mountain</option>
    <option value="iconic cities" <%= listing?.category === "iconic cities" ? "selected" : "" %>>Iconic Cities</option>
    <option value="amazing pools" <%= listing?.category === "amazing pools" ? "selected" : "" %>>Amazing Pools</option>
    <option value="castle" <%= listing?.category === "castle" ? "selected" : "" %>>Castle</option>
    <option value="farms" <%= listing?.category === "farms" ? "selected" : "" %>>Farms</option>
    <option value="camping" <%= listing?.category === "camping" ? "selected" : "" %>>Camping</option>
    <option value="dome" <%= listing?.category === "dome" ? "selected" : "" %>>Dome</option>
    <option value="arctic" <%= listing?.category === "arctic" ? "selected" : "" %>>Arctic</option>
    <option value="boat" <%= listing?.category === "boat" ? "selected" : "" %>>Boat</option>
  </select>


         <div class="invalid-feedback">Category should be valid</div>
        </div>
        <div class="row">
           <div class="mb-3 col-md-4">
           <label for="price" class="form-label">Price</label>
           <input placeholder="1400" name="listing[price]" class="form-control" required/> 
           <div class="invalid-feedback">Price should be valid</div>
           <div class="valid-feedback">Price looks good!</div>
           </div>
           <div class="mb-3 col-md-8">
           <label for="country" class="form-label">Country</label>
           <input placeholder="India" name="listing[country]" class="form-control" required/>
           <div class="invalid-feedback">Country should be valid</div>
           <div class="valid-feedback">Contry looks good!</div>
           </div>
        </div>
       
<div class="mb-3">
      <label for="location" class="form-label">Location</label>
    <input id="location" placeholder="Pune, Maharashtra" name="listing[location]" class="form-control" required />
    <div class="invalid-feedback">Location should be valid</div>
    <div class="valid-feedback">Location looks good!</div>
  </div>

  <input type="hidden" id="lat" name="listing[lat]">
  <input type="hidden" id="lng" name="listing[lng]">

  <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>

    </form>
    </div>
    </div>
    <script>
     const mapToken = "<%= process.env.MAP_TOKEN %>";
   </script>
    <script src="/javascript/geocode.js"></script>
</body>
