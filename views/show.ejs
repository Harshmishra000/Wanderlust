<% layout("/layouts/boilerplates") -%>
<style>
.reviews-container {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.review-card {
  flex: 1 1 300px;  
  min-width: 500px;
  box-sizing: border-box;
}

@media (max-width: 768px) {
  .review-card {
    flex: 1 1 100%;  
  }
}
.starability-result {
    display: inline-block;
    max-width: 100%; 
  display: inline-block;  
  white-space: nowrap;
  font-size: 2rem;
    line-height: 1; 
}
@media (max-width: 480px) {
  .starability-result {
    font-size: 1.2rem; 
  }
}
#map {
  width: 100%;  
  max-width: 800px;      
  height: 400px;     
  border-radius: 1rem;
  margin-top: 1rem;
  margin: 0 auto;
}

/* Tablet */
@media (max-width: 768px) {
  #map {
    height: 300px;
  }
}

/* Mobile */
@media (max-width: 480px) {
  #map {
    height: 250px;
  }
}

</style>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
</script>




<script src="https://cdn.maptiler.com/maptiler-sdk-js/v2.1.0/maptiler-sdk.umd.js"></script> 
<body>
    <div class="row mt-3">
    <div class="col-8 offset-3">
    <h2><%= listing.title %></h2>
    </div>
    <div class="col-6 offset-3 show-card">
    
    <img src="<%= listing.image?.url || listing.image %>" class="card-img-top show-img" alt="...">
 
  
    <p > </b><br/>
        <p>Owner <i><%= listing.Owner.username %></i></p>
        <%= listing.description %><br/>
        &#x20B9; <%= listing.price.toLocaleString("en-IN") %><br/>
        <%= listing.location %><br/>
        <%= listing.country %><br/>
        <%= listing.category%><br/>

    </p>
  
    

   </div>
       <% if(currUser && listing.Owner._id.equals(currUser._id)) { %>

        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark  offset-5">Delete</button>
            </form>
        </div>
       <%}%>
    
    </div>
    
    <div class="col-8 offset-3 ">
        <% if(currUser) {%>
        <hr>
        <h3>Leave a Review</h3>
        <form  action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
             <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <legend>Rating:</legend>
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class=" mb-3 mt-3">  
             <label for="comment" class="form-label">Comment</label>
             <textarea name="review[comment]" id="comment" rows="3"  cols="30" class="form-control" required></textarea>
             <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <%}%>
    </div>
    <br>
    <div class="row offset-3">
    <hr>
   <%  if(listing.reviews.length > 0 ){%>
    <b><p>All Reviews</p></b>
     <%for(review of listing.reviews){ %>
    <div class="card col-5 ms-3 mb-3 ">
   <div class="card-body">
    <h5 class="card-title">@<%= review.author.username %></h5>
    <p class="starability-result card-title" data-rating=<%= review.rating %>></p>
    <p class="card-text "><%=review.comment%></p>
   </div>
   <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
   <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE">
     <button class="btn btn-dark mb-3">Delete</button>
 </form>
  <%}%>
  </div>
  <%}%>
   <% }%>
    <div class="mb-3 mt-3 ">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
      <script src="/javascript/map.js"></script> 

    </div>
</body>


