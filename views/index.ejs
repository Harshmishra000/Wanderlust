<% layout("/layouts/boilerplates") -%>
<style>
#filters {
  margin-top: 2rem;
  margin-left: 4rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap; 
  gap: 1rem;
}

.filter {
  text-decoration: none;
  color: black;
  margin-right: 2rem;
  opacity: 0.6;
  text-align: center;
  font-size: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.tax-toggle {
  border: 1px solid black;
  padding: 1rem;
  height: 3.25rem;
  border-radius: 1rem;
  display: flex;
  align-items: center;
  white-space: nowrap; 
}

.tax-info {
  display: none;
}

@media (max-width: 768px) {
  #filters {
    margin-left: 1rem; 
    justify-content: center;
    gap: 0.8rem; 
  }

  .filter {
    font-size: 0.9rem;
    margin-right: 1rem;
  }

  .tax-toggle {
    font-size: 0.85rem;
    padding: 0.8rem;
    height: auto;
  }
}

@media (max-width: 480px) {
  #filters {
    flex-direction: column; 
    align-items: flex-start; 
    margin-left: 1rem;
    gap: 0.5rem;
  }

  .filter {
    margin-right: 0;
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
  }

  .tax-toggle {
    width: 100%;
    justify-content: center;
    margin-top: 0.5rem;
    font-size: 0.85rem;
  }
}
</style>


  <div id="filters">
    <a href="/listings/category/trending" class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </a>

    <a href="/listings/category/rooms" class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </a>

    <a href="/listings/category/iconic%20cities" class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </a>

    <a href="/listings/category/mountain" class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </a>

    <a href="/listings/category/castle" class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castle</p>
    </a>

    <a href="/listings/category/amazing pools" class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pools</p>
    </a>

    <a href="/listings/category/camping" class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </a>

    <a href="/listings/category/farms" class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </a>

    <a href="/listings/category/arctic" class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </a>

    <a href="/listings/category/dome" class="filter">
      <i class="fa-solid fa-igloo"></i>
      <p>Dome</p>
    </a>

    <a href="/listings/category/boat" class="filter">
      <i class="fa-solid fa-ship"></i>
      <p>Boat</p>
    </a>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

      


<div class="container mt-3">
  <% if (category) { %>
    <h3 class="text-center"><%= category %></h3>
  <% } else if (searchQuery) { %>
    <h3 class="text-center"> <%= searchQuery %></h3>
  <% } else { %>
    <h3 class="text-center">All Listings</h3>
  <% } %>
</div>

  <div class="container-fluid mt-4">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    
    <% for(let allListing of allListings){ %>
      <div class="col">
        <a href="/listings/<%= allListing._id%> ">
        <div class="card listing-card">
       <img 
        src="<%= allListing.image?.url || allListing.image %>" 
        class="card-img-top" 
        alt="Listing image" 
        style="height: 20rem; object-fit: cover;"
       />

          <div class="card-img-overlay">Details</div>
          <div class="card-body text-center">
            <b><p class="mb-1"><%= allListing.title %></p></b>
          <p class="text-success fw-bold">
           &#x20B9;<%= allListing.price ? allListing.price.toLocaleString("en-IN") : "N/A" %> / Night
           <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
          </p>

          </div>
        </div>
        </a>
      </div>
    <% } %>
  
  </div>
</div>

    </ul>
</body>
<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let texInfo = document.getElementsByClassName("tax-info");
    for(info of texInfo){
      if(info.style.display != "inline"){

        info.style.display = "inline";
      } else{
        info.style.display = "none";
      }
    }
  })
</script>
